<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
 
     <context-param>
         <param-name>weblogic.httpd.inputCharset./*</param-name>
          <param-value>UTF-8</param-value>
     </context-param>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>/WEB-INF/classes/log4j.properties</param-value>
	</context-param>
	<context-param>
        <param-name>log4jRefreshInterval</param-name>
        <param-value>6000</param-value>
    </context-param>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/classes/application-context.xml</param-value>
	</context-param>
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>MixkyApplicationPortal</param-value>
	</context-param>
	<!-- CA签名 -->
	<context-param>
		<param-name>ContainerName</param-name>
		<param-value>SCANYWHERE_CA_CONTAINER</param-value>
	</context-param>
	<!-- CA end -->
	<filter>     
        <filter-name>GzipJsFilter</filter-name>     
        <filter-class>com.wasoft.core.web.filter.GzipJsFilter</filter-class>     
        <init-param>     
            <param-name>headers</param-name>     
            <param-value>Content-Encoding=gzip</param-value>     
        </init-param>
    </filter>   
    <filter-mapping>   
        <filter-name>GzipJsFilter</filter-name>   
        <url-pattern>*.gzjs</url-pattern>   
    </filter-mapping>
   	
	<listener>
		<listener-class>
			org.springframework.web.util.Log4jConfigListener
		</listener-class>
	</listener>
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>
	<listener> 
    	<listener-class>
			com.wasoft.websocket.chat.thread.ThreadListener
		</listener-class>
	</listener>
	<!--<lisenter>
		<listener-class>
			com.mixky.system.MixkyHttpSessionListener
		</listener-class>
	</lisenter>-->

	<servlet>
		<servlet-name>mixky-system-start</servlet-name>
		<servlet-class>com.mixky.system.LoadOnStart</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>		
	<servlet>
		<servlet-name>dispatcher</servlet-name>
		<!--<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>-->
		<servlet-class>com.mixky.spring.MixkyDispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/classes/spring-jsp-servlet.xml</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>	
	<servlet-mapping>
		<servlet-name>dispatcher</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>CXFServlet</servlet-name>
		<servlet-class>org.apache.cxf.transport.servlet.CXFServlet</servlet-class>
	</servlet>
	<!-- CA签名 -->
	  <servlet>
	    <servlet-name>EnrollCertServlet</servlet-name>
	    <servlet-class>com.mixky.ca.servlet.EnrollCertServlet</servlet-class>
	  </servlet>
	  <servlet>
	    <servlet-name>ExtendCertServlet</servlet-name>
	    <servlet-class>com.mixky.ca.servlet.ExtendCertServlet</servlet-class>
	  </servlet>
	  <servlet>
	    <servlet-name>RevokeCertServlet</servlet-name>
	    <servlet-class>com.mixky.ca.servlet.RevokeCertServlet</servlet-class>
	  </servlet>
	  <servlet>
	    <servlet-name>FreezeCertServlet</servlet-name>
	    <servlet-class>com.mixky.ca.servlet.FreezeCertServlet</servlet-class>
	  </servlet>
	  <servlet>
	    <servlet-name>SetupRootCertServlet</servlet-name>
	    <servlet-class>com.mixky.ca.servlet.SetupRootCertServlet</servlet-class>
	  </servlet>
	  <servlet>
	    <servlet-name>VerifyCertServlet</servlet-name>
	    <servlet-class>com.mixky.ca.servlet.VerifyCertServlet</servlet-class>
	  </servlet>
	<!-- CA签名end -->
	<!-- DirectJNgine servlet -->
	<servlet>
		<servlet-name>MixkyAwsoftAdministratorServlet</servlet-name>
		<servlet-class>com.softwarementors.extjs.djn.servlet.DirectJNgineServlet</servlet-class>
		<init-param>
			<param-name>debug</param-name>
			<param-value>true</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
		<init-param>
			<param-name>providersUrl</param-name>
			<param-value>administrator/djn/directprovider</param-value>
		</init-param>
		<init-param>
			<param-name>apis</param-name>
			<param-value>
				administrator
			</param-value>
		</init-param>
		<init-param>
			<param-name>administrator.apiNamespace</param-name>
			<param-value>Mixky.awsoft</param-value>
		</init-param>
		<init-param>
			<param-name>administrator.apiFile</param-name>
			<param-value>resources/output/administrator/api.js</param-value>
		</init-param>
		<init-param>
			<param-name>administrator.classes</param-name>
			<param-value>
				com.mixky.engine.direct.CommonLibDirect,
				com.mixky.administrator.outline.OutlineDirect,
				com.mixky.administrator.dictionary.DictionaryDirect,
				com.mixky.administrator.designobject.DesignObjectDirect,
				com.mixky.administrator.designobject.FlowDesignerDirect,
				com.mixky.administrator.organization.OrganizationDirect,
				com.mixky.administrator.desktop.DesktopDirect,
				com.mixky.administrator.authority.AuthorityDirect,
				com.mixky.administrator.builder.BuilderDirect,
				com.mixky.portal.im.MessagerAppDirect,
				com.mixky.administrator.organization.UserScopeDirect
			</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>MixkyAwsoftAdministratorServlet</servlet-name>
		<url-pattern>/portal/administrator/djn/directprovider/*</url-pattern>
	</servlet-mapping>
	<!-- DirectJNgine servlet end-->
	
	<!-- DirectJNgine servlet -->
	<servlet>
		<servlet-name>MixkyWasoftPortalServlet</servlet-name>
		<servlet-class>com.softwarementors.extjs.djn.servlet.DirectJNgineServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
		<init-param>
			<param-name>providersUrl</param-name>
			<param-value>portal/djn/directprovider</param-value>
		</init-param>
		<init-param>
			<param-name>apis</param-name>
			<param-value>
				portal
			</param-value>
		</init-param>
		<init-param>
			<param-name>portal.apiNamespace</param-name>
			<param-value>Mixky.wasoft</param-value>
		</init-param>
		<init-param>
			<param-name>portal.apiFile</param-name>
			<param-value>resources/output/portal/api.js</param-value>
		</init-param>
		<init-param>
			<param-name>portal.classes</param-name>
			<param-value>
				com.mixky.portal.desktop.DesktopDirect,
				com.mixky.portal.organization.OrganizationDirect,
				com.mixky.portal.kqgl.KqglDirect
			</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>MixkyWasoftPortalServlet</servlet-name>
		<url-pattern>/portal/portal/djn/directprovider/*</url-pattern>
	</servlet-mapping>
	<!-- DirectJNgine servlet end-->
	
	<servlet>
		<servlet-name>fileuploadservlet</servlet-name>
		<servlet-class>com.mixky.engine.servlet.FileUploadServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>fileuploadservlet</servlet-name>
		<url-pattern>/servlet/file.upload</url-pattern>
	</servlet-mapping>
  
	<servlet>
		<servlet-name>filedownloadservlet</servlet-name>
		<servlet-class>com.mixky.engine.servlet.FileDownloadServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>filedownloadservlet</servlet-name>
		<url-pattern>/servlet/file.download</url-pattern>
	</servlet-mapping>
	
	<!--用户签名上传-->
	<servlet>
		<servlet-name>FileUpload2Folder</servlet-name>
		<servlet-class>com.mixky.administrator.servlet.FileUpload2FolderServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FileUpload2Folder</servlet-name>
		<url-pattern>/servlet/file.upload.to.folder</url-pattern>
	</servlet-mapping>
	
	<!--桌面背景图片上传-->
	<servlet>
		<servlet-name>WallPaperUpload2Folder</servlet-name>
		<servlet-class>com.mixky.portal.servlet.WallPaperUpload2FolderServlet</servlet-class>
	</servlet>	
	<servlet-mapping>
		<servlet-name>WallPaperUpload2Folder</servlet-name>
		<url-pattern>/servlet/wallpaper.img.upload</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>CXFServlet</servlet-name>
		<url-pattern>/services/*</url-pattern>
	</servlet-mapping>

	<!-- axis start -->
	<servlet>
		<servlet-name>AxisServlet</servlet-name>
		<display-name>Apache-Axis Servlet</display-name>
		<servlet-class>
			org.apache.axis.transport.http.AxisServlet
		</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>AdminServlet</servlet-name>
		<display-name>Axis Admin Servlet</display-name>
		<servlet-class>
			org.apache.axis.transport.http.AdminServlet
		</servlet-class>
		<load-on-startup>100</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>SOAPMonitorService</servlet-name>
		<display-name>SOAPMonitorService</display-name>
		<servlet-class>
			org.apache.axis.monitor.SOAPMonitorService
		</servlet-class>
		<init-param>
			<param-name>SOAPMonitorPort</param-name>
			<param-value>5001</param-value>
		</init-param>
		<load-on-startup>100</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>AxisServlet</servlet-name>
		<url-pattern>/servlet/AxisServlet</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>AxisServlet</servlet-name>
		<url-pattern>*.jws</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>AxisServlet</servlet-name>
		<url-pattern>/sms/services/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>SOAPMonitorService</servlet-name>
		<url-pattern>/SOAPMonitor</url-pattern>
	</servlet-mapping>	
	<!-- axis end -->
	
	 <!-- CA签名 -->
	<servlet-mapping>
	    <servlet-name>EnrollCertServlet</servlet-name>
	    <url-pattern>/EnrollCertServlet</url-pattern>
	</servlet-mapping>
	  <servlet-mapping>
	    <servlet-name>ExtendCertServlet</servlet-name>
	    <url-pattern>/ExtendCertServlet</url-pattern>
	  </servlet-mapping>
	  <servlet-mapping>
	    <servlet-name>RevokeCertServlet</servlet-name>
	    <url-pattern>/RevokeCertServlet</url-pattern>
	  </servlet-mapping>
	  <servlet-mapping>
	    <servlet-name>FreezeCertServlet</servlet-name>
	    <url-pattern>/FreezeCertServlet</url-pattern>
	  </servlet-mapping>
	  <servlet-mapping>
	    <servlet-name>SetupRootCertServlet</servlet-name>
	    <url-pattern>/SetupRootCertServlet</url-pattern>
	  </servlet-mapping>
	  <servlet-mapping>
	    <servlet-name>VerifyCertServlet</servlet-name>
	    <url-pattern>/VerifyCertServlet</url-pattern>
	  </servlet-mapping>
	  <!-- CA签名 end-->
	
	<filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>com.mixky.engine.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>ignore</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    
	<session-config>
       <session-timeout>120</session-timeout>
    </session-config>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<error-page>
		<error-code>404</error-code>
		<location>/404.jsp</location>
	</error-page>
</web-app>
